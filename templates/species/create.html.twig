{% extends 'base.html.twig' %}

{% block title %}Create Species{% endblock %}

{% block body %}

    <div class="container mb-5" style="margin-top: 250px">
        <h1>Create Species</h1>
        <form action="{{ path('species_store') }}" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <h6>Image</h6>
                    <input type="file" name="image">
                    <hr>

                    <label for="species_name" class="form-label">Name</label>
                    <input class="form-control" type="text" name="species_name" id="species_name">
                    <label for="floatingTextarea" class="form-label">About</label>
                    <div class="form-floating">
                        <textarea class="form-control" name="species_about" id="floatingTextarea"></textarea>
                    </div>
                </div>
                <div class="col-md-6 mt-2">
                    {% include 'validations/validation.html.twig' %}
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-12">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-outline-success me-2">Add</button>
                        <a class="btn btn-outline-secondary me-2" href="{{ path('species_index') }}">Back</a>
                    </div>
                </div>
            </div>
            <input type="hidden" name="token" value="{{ csrf_token('') }}"/>
        </form>
    </div>

{% endblock %}