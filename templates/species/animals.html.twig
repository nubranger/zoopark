{% extends 'base.html.twig' %}

{% block title %}Animal Species{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ species.name }}</h1>
    </div>
    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-md-4 g-2">
            {% for animal in animals %}
                <div class="col">
                    <div class="card h-100">
                        {{ animal.name }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
