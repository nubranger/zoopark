{% extends 'base.html.twig' %}

{% block title %}Animal Species{% endblock %}

{% block body %}
    <div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-light hero"
         style="background-image: linear-gradient(to right bottom, #00b42f8f, #ffeb0059), url('/build/images/hero/species/{{ species.name }}.jpg');"
    >
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            {# Hero text #}
        </div>
    </div>

    <div class="container mt-5">
        <h1 class="text-white">{{ species.name }}</h1>
    </div>

    <div class="container mt-5 mb-5">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for animal in animals %}
                <div class="col">
                    <div class="card h-100">
                        {% if animal.image %}
                            <img src="{{ asset('build/images/noimage.jpg') }}" alt="noimage" class="card-img-top">
                        {% else %}
                            <img src="{{ asset('build/images/noimage.jpg') }}" alt="noimage" class="card-img-top">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ animal.name }}</h5>
                            <p class="card-text">Birth year: {{ animal.birthYear.format("Y") }}</p>
                            <p class="card-text">Species: {{ animal.species.name }}</p>
                            <p class="card-text">Specialist of {{ animal.species.name }}: {{ animal.manager.name }} {{ animal.manager.surname }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if animals is empty %}
            <p class="mt-2">There are no animals to show.</p>
        {% endif %}
    </div>
{% endblock %}
