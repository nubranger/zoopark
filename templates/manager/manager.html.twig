{% extends 'base.html.twig' %}

{% block title %}{{ manager.name }} {{ manager.surname }}{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 250px; margin-bottom: 200px">
{#        <h1>{{ manager.name }} {{ manager.surname }}</h1>#}
        <div class="row">
            <div class="col-md-4">
                <div class="d-flex justify-content-center p-3">
                    {% if manager.image %}
                        <img class="img-fluid" src="{{ manager.imagePath }}" alt="{{ manager.image }}">
                    {% else %}
                        <img class="img-fluid" src="{{ asset('./build/images/noimage.jpg') }}" alt="noimage">
                    {% endif %}
                </div>
            </div>
            <div class="col-md-8">
                <div class="p-3">
                    <h4>{{ manager.name }} {{ manager.surname }}</h4>
                    <h6>Specialty: {{ manager.species.name }}</h6>
                    <div><h6>About:</h6>{{ manager.about }}</div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}