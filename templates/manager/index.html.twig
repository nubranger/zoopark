{% extends 'base.html.twig' %}

{% block title %}Specialists{% endblock %}

{% block body %}
    <div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-light hero"
         style="background-image: linear-gradient(to right bottom, #00b42f8f, #ffeb0059), url({{ asset('build/images/hero/hero2.jpg') }});"
    >
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            {# Hero text #}
        </div>
    </div>

    <div class="container mt-5">
        <h1 class="text-white">Our specialists</h1>
    </div>
    <div class="container mt-5 mb-5">
        <div class="row row-cols-1 row-cols-md-4 g-2">
            {% for manager in managers %}
                <div class="col">
                    <div class="card h-100">
                        <img src="{{ asset('build/images/managers/' ~ manager.image) }}" class="card-img-top p-3"
                             alt="{{ manager.name }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ manager.name }} {{ manager.surname }}</h5>
                            <p class="card-text">Specialty: {{ manager.species.name }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
